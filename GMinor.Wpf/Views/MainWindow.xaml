<Window x:Class="GMinor.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GMinor.Wpf.ViewModels"
        Title="GMinor"
        Height="620" Width="820"
        MinHeight="400" MinWidth="500"
        ResizeMode="CanResize"
        Background="{StaticResource WindowBgBrush}">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Nav bar -->
        <Border DockPanel.Dock="Top"
                Height="60"
                BorderBrush="{StaticResource BorderDefaultBrush}"
                BorderThickness="0,0,0,1"
                Background="{StaticResource WindowBgBrush}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="16,0">
                <Button Style="{StaticResource GhostButtonStyle}"
                        Content="Dispatch"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Dispatch"/>
                <Button Style="{StaticResource GhostButtonStyle}"
                        Content="History"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="History"
                        Margin="4,0,0,0"/>
                <Button Style="{StaticResource GhostButtonStyle}"
                        Content="Settings"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Settings"
                        Margin="4,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Page frame -->
        <Frame NavigationUIVisibility="Hidden"
               Content="{Binding CurrentPage}"/>
    </DockPanel>
</Window>
